<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <include
        android:id="@+id/toolbarTop"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_green"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarTop">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/badgeMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/ivBadge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:alpha="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/badge_rect" />

            <ImageView
                android:id="@+id/ivMainLogo"
                android:layout_width="250dp"
                android:layout_height="70dp"

                android:contentDescription="@string/cdMainLogo"

                app:layout_constraintStart_toStartOf="@+id/ivBadge"
                app:layout_constraintTop_toTopOf="@+id/ivBadge"
                app:srcCompat="@drawable/logo_icst" />

            <TextView
                android:id="@+id/tvMainHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="@string/hi"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ivBadge"
                app:layout_constraintStart_toStartOf="@+id/ivBadge"
                app:layout_constraintTop_toTopOf="@+id/ivBadge" />

            <TextView
                android:id="@+id/tvMainMsg"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/main_msg"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivBadge"
                app:layout_constraintEnd_toEndOf="@+id/ivBadge"
                app:layout_constraintStart_toStartOf="@+id/ivBadge"
                app:layout_constraintTop_toBottomOf="@+id/tvMainHello" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btnMainStart"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="@string/start_test"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlMain" />



</androidx.constraintlayout.widget.ConstraintLayout>